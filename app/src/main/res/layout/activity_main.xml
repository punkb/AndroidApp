<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF00B"
    tools:context="com.crowdsight.mobile.app.MainActivity">

    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <fragment android:name="com.crowdsight.mobile.app.SelectionFragment"
        android:id="@+id/selectionFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <fragment android:name="com.crowdsight.mobile.app.SplashFragment"
        android:id="@+id/splashFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <ListView
        android:divider="@android:color/transparent"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerList"
        android:layout_gravity="left"
        android:entries="@array/home_menu"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:background="#cccc"




      >
    </ListView>

