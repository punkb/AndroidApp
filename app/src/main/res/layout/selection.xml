
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.crowdsight.mobile.app.SelectionFragment"
    android:background="@drawable/background">

    <com.facebook.widget.ProfilePictureView
    android:id="@+id/selection_profile_pic"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />



    <TextView
    android:id="@+id/selection_user_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_alignParentTop="true"
    android:layout_marginTop="25dp"
    android:textColor="#ffffffff"
    android:textStyle="bold"
    android:layout_toRightOf="@+id/selection_profile_pic"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:textSize="30dp"
    android:layout_marginLeft="10dp" />











    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Team"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignRight="@+id/imageRewards"
        android:layout_alignEnd="@+id/imageRewards"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/manchester"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageOffers"
        android:layout_alignStart="@+id/imageOffers"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageRewards"
        android:src="@drawable/rewards"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageOffers"
        android:src="@drawable/offers"
        android:layout_alignTop="@+id/imageRewards"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="25dp"
        android:background="@null" />

</RelativeLayout>


