
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.crowdsight.mobile.app.SelectionFragment"
    android:background="@drawable/background">

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/selection_profile_pic"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/selection_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/selection_profile_pic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Team"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageRewards"
        android:layout_alignEnd="@+id/imageRewards"
        android:layout_alignTop="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/manchester"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageOffers"
        android:layout_alignEnd="@+id/imageOffers" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageRewards"
        android:src="@drawable/rewards"
        android:background="@null"
        android:layout_above="@+id/textView3"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageOffers"
        android:src="@drawable/offers"
        android:background="@null"
        android:layout_alignTop="@+id/imageRewards"
        android:layout_alignRight="@+id/selection_user_name"
        android:layout_alignEnd="@+id/selection_user_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/uploadButton"
        android:layout_above="@+id/imageRewards"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:background="#0099CC"
        android:layout_alignRight="@+id/imageRewards"
        android:layout_alignEnd="@+id/imageRewards" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter Login"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/btnTwitterLogin"
        android:background="#0099CC"
        android:layout_alignTop="@+id/uploadButton"
        android:layout_alignRight="@+id/imageOffers"
        android:layout_alignEnd="@+id/imageOffers"
        android:layout_alignLeft="@+id/imageOffers"
        android:layout_alignStart="@+id/imageOffers" />

</RelativeLayout>


