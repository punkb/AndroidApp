<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crowdsight.mobile.app.about"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/wembley" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wembley Stadium"
        android:id="@+id/textView"
        android:layout_gravity="left|top"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic"
        android:textSize="28dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wembley Park, London"
        android:id="@+id/textView2"
        android:layout_gravity="left|top"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffffff"
        android:textStyle="italic"
        android:textSize="18dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 miles away"
        android:id="@+id/textView3"
        android:layout_gravity="left|top"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:textColor="#ffffffff"
        android:textStyle="italic"
        android:textSize="18dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wembley Stadium is a football stadium in Wembley Park, London, England. It opened in 2007 and was built on the site of the earlier Wembley Stadium which was demolished in 2003."
        android:id="@+id/textView4"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity:"
        android:id="@+id/textView5"
        android:layout_gravity="bottom|left"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginBottom="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opened:"
        android:id="@+id/textView6"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginBottom="125dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team:"
        android:id="@+id/textView7"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginBottom="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90,000"
        android:id="@+id/textView8"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffffff"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March 9, 2007"
        android:id="@+id/textView9"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffffff"
        android:layout_marginBottom="125dp"
        android:layout_marginLeft="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="England national football team"
        android:id="@+id/textView10"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffffff"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="75dp" />
</FrameLayout>
